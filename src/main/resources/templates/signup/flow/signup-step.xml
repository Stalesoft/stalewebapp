<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
      	http://www.springframework.org/schema/webflow
      	http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
  
        <view-state id="account" view="/signup/flow/credentials">
            <transition on="continue" to="personal"/>
            <transition on="cancel" to="cancelled"/>
        </view-state>
        
        <view-state id="personal" view="/signup/flow/personal">
            <transition on="continue" to="createAccount"/>
            <transition on="cancel" to="cancelled"/>
        </view-state>
        
         <action-state id="createAccount">
			<evaluate expression="signupController.createAccount()"/>
			<transition on="continue" to="done"/>
			<transition on="error_account" to="account"/>
			<transition on="error_personal" to="accountDetails"/>
		</action-state>
        
        <end-state id="done" view="done"/>
        
        <end-state id="cancelled" view="/welcome/home"/>
        

</flow>