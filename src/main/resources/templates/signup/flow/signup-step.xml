<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
      	http://www.springframework.org/schema/webflow
      	http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
      	  
      	<on-start>
        	<evaluate expression="signupController.getSignupDto()" result="flowScope.signup" />
        	<evaluate expression="signupController.getSignupModel(flowScope.dto)" result="flowScope.model" />
    	</on-start>

      	
    	<view-state id="credentials" view="/signup/flow/credentials" model="flowscope.signup">
            <transition on="continue" to="personal"/>
            <transition on="cancel" to="cancelled"/>
        </view-state>
        
        <view-state id="personal" view="/signup/flow/personal">
            <transition on="continue" to="createAccount"/>
            <transition on="cancel" to="cancelled"/>
        </view-state>
        
         <action-state id="createAccount">
         	<evaluate expression="signupController.createAccount(flowScope.dto, flowScope.model)"/>
			<transition on="continue" to="createAccountII"/>
			<transition on="error_account" to="account"/>
			<transition on="error_personal" to="accountDetails"/>
		</action-state>
        
        <action-state id="createAccountII">
         	<evaluate expression="signupController.createAccount(flowScope.dto, flowScope.model)"/>
			<transition on="continue" to="done"/>
			<transition on="error_account" to="account"/>
			<transition on="error_personal" to="accountDetails"/>
		</action-state>
		
        <end-state id="done" view="/signup/done"/>
        
        <end-state id="cancelled" view="/welcome/home"/>
        

</flow>